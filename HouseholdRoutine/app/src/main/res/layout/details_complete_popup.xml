<?xml version="1.0" encoding="utf-8"?>


<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:paddingBottom="16dp">


    <TextView
        android:id="@+id/complete_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:paddingBottom="16dp"
        android:text="@string/task_details_complete_text"
        android:textAllCaps="false"
        android:textColor="@color/primary_text"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/complete_yes_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:text="@string/task_details_complete_yes"
        android:textColor="@color/secondary_text"
        app:layout_constraintEnd_toStartOf="@+id/complete_vertical_devider"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/complete_vertical_devider" />

    <Button
        android:id="@+id/complete_no_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:text="@string/task_details_complete_no"
        android:textColor="@color/secondary_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/complete_vertical_devider"
        app:layout_constraintTop_toTopOf="@+id/complete_yes_button" />

    <ImageView
        android:id="@+id/complete_horizontal_divider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/complete_text"
        app:srcCompat="@color/divider" />

    <ImageView
        android:id="@+id/complete_vertical_devider"
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/complete_text"
        app:layout_constraintStart_toStartOf="@+id/complete_text"
        app:layout_constraintTop_toBottomOf="@+id/complete_horizontal_divider"
        app:srcCompat="@color/divider" />
</android.support.constraint.ConstraintLayout>
